# ================================
# APPLICATION SETTINGS
# ================================
APP_NAME=Stock Prediction Dashboard
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# ================================
# DATA SOURCES
# ================================
USE_YFINANCE=True

# Alpha Vantage (optional)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
ALPHA_VANTAGE_RATE_LIMIT=5

# Polygon.io (optional)
POLYGON_API_KEY=your_polygon_key
POLYGON_TIER=free

# ================================
# DATABASE CONFIGURATION
# ================================
DB_TYPE=sqlite
SQLITE_DB_PATH=./database/stock_data.db

# PostgreSQL (for production)
# DB_TYPE=postgresql
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=stock_prediction_db

# ================================
# DATA SETTINGS
# ================================
DATA_START_DATE=2019-01-01
DATA_END_DATE=2024-12-31
LOOKBACK_PERIOD=60
UPDATE_INTERVAL=daily
CACHE_DURATION=3600

ENABLE_SP500=True
ENABLE_RUSSELL2000=False

# ================================
# MODEL CONFIGURATION
# ================================
DEFAULT_MODEL=xgboost
TRAIN_TEST_SPLIT=0.8
VALIDATION_SPLIT=0.1
RANDOM_SEED=42

# LSTM Settings
LSTM_UNITS=50
LSTM_LAYERS=2
LSTM_DROPOUT=0.2
LSTM_BATCH_SIZE=32
LSTM_EPOCHS=100
LSTM_EARLY_STOPPING_PATIENCE=10

# XGBoost Settings
XGBOOST_N_ESTIMATORS=100
XGBOOST_MAX_DEPTH=5
XGBOOST_LEARNING_RATE=0.1

# Feature Engineering
USE_PCA=True
PCA_COMPONENTS=20
FEATURE_SELECTION_METHOD=shap

# ================================
# PORTFOLIO OPTIMIZATION
# ================================
PORTFOLIO_SIZE=10
OPTIMIZATION_METHOD=max_sharpe
REBALANCE_FREQUENCY=weekly
MAX_POSITION_SIZE=0.15
MIN_POSITION_SIZE=0.05
RISK_FREE_RATE=0.04

# Risk Management
MAX_PORTFOLIO_VOLATILITY=0.20
TARGET_SHARPE_RATIO=1.5
STOP_LOSS_PERCENTAGE=0.02

# ================================
# BACKTESTING
# ================================
INITIAL_CAPITAL=100000
COMMISSION_RATE=0.0
SLIPPAGE_RATE=0.001
BID_ASK_SPREAD=0.0005

# ================================
# DASHBOARD SETTINGS
# ================================
DASHBOARD_PORT=8501
DASHBOARD_HOST=0.0.0.0
REFRESH_INTERVAL=300
MAX_CACHE_SIZE=1000

# ================================
# LOGGING
# ================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# ================================
# PERFORMANCE
# ================================
N_WORKERS=4
USE_GPU=False
MEMORY_LIMIT=8G

# ================================
# DEPLOYMENT
# ================================
DEPLOY_PLATFORM=streamlit_cloud
AUTO_UPDATE_DATA=True
ENABLE_API=False
